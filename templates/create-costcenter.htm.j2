{% extends "base.htm.j2" %}

{% block content %}

          <div class="page-title">
            <div class="title_left">
              <h3>Create Cost Center</h3>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Cost Center</h2>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <br />
                  <form data-parsley-validate class="form-horizontal form-label-left" method="POST">

                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="costcenter-id">Cost Center ID
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" name="costcenter-id" class="form-control"
                          placeholder="Prefix: presale pre-, project pro-, support sup-" required="required"
                          {% if user_input: %}
                          value="{{ user_input['costcenter_id'] }}"
                          {% endif %}
                          >
                      </div>
                      {% if user_input: %}
                        <p style="color:red"><i>Cost center ID already exists!</i></p>
                      {% endif %}
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="costcenter-name">Cost Center Name
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" name="costcenter-name" class="form-control"
                          placeholder="Enter cost center name" required="required"
                          {% if user_input: %}
                          value="{{ user_input['costcenter_name'] }}"
                          {% endif %}
                          >
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="costcenter-budget">Cost Center Budget
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" name="costcenter-budget" class="form-control currency"
                          data-thousands="." data-prefix="Rp " data-precision="0"
                          placeholder="Enter cost center maximum budget" required="required"
                          {% if user_input: %}
                          value="{{ format_currency(user_input['costcenter_budget']) }}"
                          {% endif %}
                          >
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="costcenter-category">Cost Center Category
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <select name="costcenter-category" class="form-control" required="required">
                          <option selected="selected" value="">Select one</option>
                          <option value="internal">Internal</option>
                          <option value="presales">Presales</option>
                          <option value="project">Project</option>
                          <option value="support">Support</option>
                        </select>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="costcenter-status">Cost Center Status
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <select name="costcenter-status" class="form-control" required="required">
                          <option selected="selected" value="active">Active</option>
                          <option value="closed">Closed</option>
                        </select>
                      </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button type="submit" class="btn btn-success">Submit</button>
                      </div>
                    </div>

                  </form>
                </div>
              </div>
            </div>
          </div>

{% endblock %}


{% block script %}
<!-- jquery-maskmoney -->
<script type="text/javascript" src="{{ url_for('static', filename='vendors/jquery-maskmoney/jquery.maskMoney.min.js') }}"></script>
<script type="text/javascript">

$(function() {
  $('.currency').maskMoney();
});

</script>
{% endblock %}
