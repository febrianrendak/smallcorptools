<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Jawdat Internal Applications</title>
    <link rel="shortcut icon" href="{{ url_for('static', filename='images/favicon.ico') }}" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ url_for('static', filename='vendors/bootstrap/dist/css/bootstrap.min.css') }}">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ url_for('static', filename='vendors/font-awesome/css/font-awesome.min.css') }}">

    <!-- Custom Theme Style -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/custom.css') }}">
  </head>

  <body style="background:#F7F7F7;">
    <div class="">

      <div id="wrapper">
        <div id="login" class="form">
          <section class="login_content">
            <form method="POST">
              <h1>Create New Password</h1>
              {% if msg: %}
              <div class="alert {% if err: %}alert-danger {% else: %}alert-success {% endif %}alert-dismissible fade in" role="alert">
                {{ msg }}
              </div>
              {% endif %}
              <div>
                <input type="password" name="new-password" class="form-control" placeholder="New Password" required="" />
              </div>
              <div>
                <input type="password" name="confirm-new-password" class="form-control" placeholder="Confirm New Password" required="" />
              </div>
              <div>
                <button class="btn btn-default submit">Submit</button>
                <a class="reset_pass" href="{{ url_for('login') }}">Login Page</a>
              </div>
              <div class="clearfix"></div>
              <div class="separator">
                <div class="clearfix"></div>
                <br />
                <div>
                  <h1><i class="fa fa-paper-plane" style="font-size: 26px;"></i> Jawdat Internal Applications</h1>
                  <p>Â©2016 Jawdat Teknologi Indonesia</p>
                </div>
              </div>
            </form>
          </section>
        </div>

      </div>
    </div>

    <!-- jQuery -->
    <script src="{{ url_for('static', filename='vendors/jquery/dist/jquery.min.js') }}"></script>
    {% if redirect: %}
    <script>
      $(document).ready(function () {
          window.setTimeout(function () {
              window.location.href = "{{ redirect }}";
          }, 3000);
      });
    </script>
    {% endif %}
  </body>
</html>
